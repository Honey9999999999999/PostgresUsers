<configuration>
    <!-- Настройка вывода в консоль -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Оставляем чистый вывод сообщения -->
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Глушим Hibernate до критических ошибок -->
    <logger name="org.hibernate" level="ERROR" />
    <logger name="org.hibernate.SQL" level="ERROR" />

    <!-- Глушим прочие системные логи (например, пул соединений) -->
    <logger name="com.zaxxer.hikari" level="ERROR" />

    <!--
      Настраиваем ваш проект.
      Замените 'org.example' на ваш корневой пакет.
      Это позволит видеть ваши log.info(), но игнорировать чужие.
    -->
    <logger name="org.example" level="INFO" />

    <!-- Root уровень ставим в INFO, чтобы ваши логи проходили -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>